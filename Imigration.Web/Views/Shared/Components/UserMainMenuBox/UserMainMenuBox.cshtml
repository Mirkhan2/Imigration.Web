@using Imigration.Application.Statics
@using Imigration.Application.Extensions
@model Imigration.Domains.Entities.Account.User


<div class="clientarea-layer">
    <div class="loggedin-status hidden">
        <i class="icon-profile"></i>
        <span> حساب کاربری شما  </span>
        <div class="sublayer">
            <div class="avatar">
                <a href=""><img src="PathTools.UserAvatarPath@Model.Avatar"></a>
                <div>
                    <span class="fullname">@Model.GetUserDisplayName() </span>
                    </div>
            </div>
            <ul>
                <li><a asp-action="Index" asp-controller="Home" asp-area="UserPanel"> مشاهده حساب کاربری </a></li>
                <li><a  asp-area="UserPanel" asp-controller="Account" asp-action="EditInfo"> ویرایش حساب کاربری </a></li>
                <li><a asp-area="UserPanel" asp-controller="Account" asp-action="changeUserPassword"> تغییر رمز عبور </a></li>
                <li><a asp-controller="Account " asp-action="Logout"> خروج از حساب کاربری </a></li>
            </ul>
        </div>
    </div>

</div>